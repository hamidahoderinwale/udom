{
  "api_endpoint": "https://openrouter.ai/api/v1/chat/completions",
  "models": {
    "rule_generation": {
      "model": "anthropic/claude-3-haiku",
      "temperature": 0.7,
      "max_tokens": 2048
    },
    "rule_matching": {
      "model": "anthropic/claude-3-haiku",
      "temperature": 0.3,
      "max_tokens": 1024
    }
  },
  "generation_defaults": {
    "min_confidence": 0.6,
    "min_novelty_score": 0.3,
    "max_rules_per_batch": 10
  },
  "output_paths": {
    "generated_rules": "data/generated_rules",
    "training_dataset": "data/training_dataset/synthetic_preferences.jsonl"
  }
}


