{
  "dpo_config": {
    "beta": 0.1,
    "learning_rate": 5e-6,
    "batch_size": 2,
    "gradient_accumulation_steps": 8,
    "num_epochs": 3,
    "warmup_ratio": 0.1,
    "weight_decay": 0.01,
    "max_grad_norm": 1.0,
    "save_steps": 500,
    "eval_steps": 500,
    "logging_steps": 50,
    "max_length": 1024,
    "max_prompt_length": 512
  },
  "model_config": {
    "base_model": "microsoft/Phi-3-mini-4k-instruct",
    "alternatives": [
      "meta-llama/Llama-3.2-1B-Instruct",
      "Qwen/Qwen2.5-1.5B-Instruct",
      "mistralai/Mistral-7B-Instruct-v0.3",
      "google/gemma-2-2b-it"
    ],
    "load_in_4bit": true,
    "use_flash_attention": true,
    "torch_dtype": "bfloat16"
  },
  "data_config": {
    "train_split": 0.8,
    "val_split": 0.1,
    "test_split": 0.1,
    "shuffle": true,
    "seed": 42,
    "min_samples": 100,
    "optimal_samples": 1000
  },
  "lora_config": {
    "r": 16,
    "lora_alpha": 32,
    "lora_dropout": 0.05,
    "target_modules": ["q_proj", "v_proj", "k_proj", "o_proj"],
    "bias": "none",
    "task_type": "CAUSAL_LM"
  },
  "evaluation_config": {
    "metrics": [
      "rule_quality_score",
      "preference_accuracy",
      "confidence_calibration",
      "diversity_score"
    ],
    "eval_batch_size": 4,
    "num_eval_samples": 100
  },
  "output_config": {
    "model_output_dir": "models/fine_tuned",
    "checkpoint_dir": "models/checkpoints",
    "logs_dir": "logs",
    "results_dir": "results/evaluation",
    "push_to_hub": false,
    "hub_model_id": null
  }
}
