  "preference_rules": [
    {
      "id": "style_consistency",
      "principle": "Rules that correctly identify style consistency are preferred over style-agnostic rules",
      "preferred_example": "User applies Bauhaus-inspired geometric composition with primary colors",
      "rejected_example": "User adds shapes and colors",
      "training_weight": 1.3
    },
    {
      "id": "consumer_intent_translation",
      "principle": "Rules that translate consumer language to design decisions are preferred",
      "preferred_example": "User refines typography for 'premium' feel using thin serif and generous whitespace",
      "rejected_example": "User changes font and spacing",
      "training_weight": 1.4
    },
    {
      "id": "element_psychology",
      "principle": "Rules that capture psychological effect of design choices are preferred",
      "preferred_example": "User adds warm colors to create welcoming, friendly atmosphere",
      "rejected_example": "User changes colors to orange and yellow",
      "training_weight": 1.2
    },
    {
      "id": "historical_context",
      "principle": "Rules that recognize historical design influences are valuable for style transfer",
      "preferred_example": "User applies Swiss Style grid-based layout for professional clarity",
      "rejected_example": "User uses grid layout",
      "training_weight": 1.1
    }
  ],

  "detection_functions": {
    "style_detection": {
      "description": "Score how well a design matches a style based on element presence",
      "algorithm": "weighted_element_match",
      "threshold": 0.6
    },
    "consumer_intent_detection": {
      "description": "Map user language to design intent",
      "algorithm": "keyword_fuzzy_match",
      "threshold": 0.4
    },
    "psychological_effect_scoring": {
      "description": "Score the psychological coherence of design choices",
      "algorithm": "element_effect_consistency",
      "threshold": 0.5
    }
  }
}


