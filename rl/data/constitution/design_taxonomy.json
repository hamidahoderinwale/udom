  "style_principles": [
    {
      "id": "modernism",
      "category": "historical_movement",
      "name": "Modernism",
      "detection": {
        "keywords": ["clean", "simple", "minimal", "functional", "geometric"],
        "elements": ["geometric_shapes", "sans_serif_fonts", "primary_colors", "clean_grids", "minimal_ornamentation"],
        "fonts": ["Helvetica", "Futura"],
        "colors": ["primary_colors", "black", "white"]
      },
      "psychological_effect": "Form follows function; radical simplification",
      "training_weight": 1.0,
      "period": "1920s-1960s"
    },
    {
      "id": "bauhaus",
      "category": "historical_movement",
      "name": "Bauhaus",
      "detection": {
        "keywords": ["geometric", "bold", "colorful", "modern", "functional"],
        "elements": ["circles", "squares", "triangles", "primary_colors", "bold_sans_serif", "asymmetric_layouts", "modular_grids"],
        "colors": ["primary_colors", "neutrals"]
      },
      "psychological_effect": "Unity of art, craft, and technology; democratic design",
      "training_weight": 1.0,
      "period": "1919-1933"
